<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springmybatisaccountmodule.user.Domain.repositories.UserRepository">

    <resultMap id="UserResultMap" type="User">
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="dateCreated" column="dateAt"/>
        <result property="lastLogin" column="lastLogin"/>
    </resultMap>

    <select id="createTable" resultMap="UserResultMap">
        CREATE TABLE IF NOT EXISTS users
        (
        id SERIAL PRIMARY KEY,
        username    TEXT,
        password   TEXT,
        email TEXT,
        roles TEXT,
        dateAt timestamp,
        lastLogin timestamp
        );
    </select>

    <select id="findOne" resultMap="UserResultMap">
        SELECT *
        FROM users
        WHERE email = #{email:VARCHAR}
    </select>
    <select id="findEmailWithPassword" resultMap="UserResultMap">
        SELECT *
        FROM users
        WHERE email = #{email:VARCHAR}
        AND password = #{password:VARCHAR}
    </select>
    <delete id="delete">
        DELETE FROM users
               WHERE email = #{email:VARCHAR};
    </delete>
    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO users
            (id,
             username,
             password,
             email,
             dateAt,
             lastLogin
             )
        VALUES(
               DEFAULT,
                #{username:VARCHAR},
               #{password:VARCHAR},
               #{email:VARCHAR},
               #{dateCreated:TIMESTAMP},
               #{lastLogin:TIMESTAMP}
               )
    </insert>
</mapper>