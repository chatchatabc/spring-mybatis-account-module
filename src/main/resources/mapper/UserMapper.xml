<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.user.domain.repository.UserRepository">

    <resultMap id="UserResultMap" type="User">
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="role" column="role"/>
        <result property="dateCreated" column="dateat"/>
        <result property="lastLogin" column="lastlogin"/>
    </resultMap>

    <select id="findUserByEmail" resultMap="UserResultMap">
        SELECT *
        FROM users
        WHERE email = #{email:VARCHAR}
    </select>
    <select id="findEmailWithPassword" resultMap="UserResultMap">
        SELECT *
        FROM users
        WHERE email = #{email:VARCHAR}
        AND password = #{password:VARCHAR}
    </select>
    <delete id="removeUser">
        DELETE FROM users
               WHERE email = #{email:VARCHAR};
    </delete>
    <insert id="createUser" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO users
            (id,
             username,
             password,
             email,
             role,
             dateAt,
             lastLogin
             )
        VALUES(
               DEFAULT,
                #{username:VARCHAR},
               #{password:VARCHAR},
               #{email:VARCHAR},
               #{role:VARCHAR},
               #{dateCreated:TIMESTAMP},
               #{lastLogin:TIMESTAMP}
               )
    </insert>
</mapper>